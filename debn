<html>
   <head>
   <title>Mi primer programa</title>
   <script type="text/javascript">
           var num;
           num = 0;
           num = prompt('Ingrese su numero: ','');
           
           if (num > 0){
               r = num / 2;
               resto = num % 2;
               document.write(resto);
               resto = r % 2;
               r = r / 2;
               document.write(resto);
               resto = r % 2;
               r = r / 2;
               document.write(resto);
               resto = r % 2;
               r = r / 2;
               document.write(resto);
               document.write(r)
           }
           else 
           {
               document.write('Usted ingreso un numero invalido');
           }
   </script>
   </head>
   </html>
